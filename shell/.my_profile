eval "$(starship init bash)"

export PATH=$PATH:$HOME/apps/bin

## Docker
alias dockerps="docker ps --format 'table {{.ID}}\t{{.Names}}\t{{.Image}}\t{{.Status}}\t{{.Ports}}'"
